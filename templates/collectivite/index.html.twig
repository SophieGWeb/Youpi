{# Ici la liste des collectivites avec une possibilité d'ajout #}
{% extends 'base.html.twig' %}
{% block body %}

<br>
<center><FONT face="Cabin Sketch" size="30">Liste des collectivités</FONT><BR></center><hr>
<br><br>
<center><img src="https://urbainecity.com/wp-content/uploads/2017/02/Lyon_soir.jpg" height="350px" alt=""></center>
<br>
    <table class="table table-striped table-info">
        <thead>
            <tr>
                
                <th>Nom</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Codepostal</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collectivite in collectivites %}
            <tr>
                
               
                
                <td>{{ collectivite.nom }}</td>
                <td>{{ collectivite.adresse }}</td>
                <td>{{ collectivite.telephone }}</td>
                <td>{{ collectivite.codepostal }}</td>
                <td>{{ collectivite.ville }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('collectivite_show', {'id': collectivite.id}) }}">Détails</a>
                
                </td>
            </tr>
           
        {% else %}
            <tr>
                <td colspan="10">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <center><a class="btn btn-success" href="{{ path('app_register') }}">Créer une nouvelle Collectivité</a></center>

{% endblock %}
