{% extends 'base.html.twig' %}
{# Index des planning visible par les collectivites #}
{% block title %}Planning index{% endblock %}
{% block body %}
    <center><FONT face="Cabin Sketch" size="30">Planning 2020</FONT><BR></center>
        

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>ActiviteMatin</th>
                    <th>ActiviteAprem</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for planning in plannings %}
                <tr>
                    <td>{{ planning.id }}</td>
                    <td>{{ planning.activiteMatin }}</td>
                    <td>{{ planning.activiteAprem }}</td>
                    <td>
                        <a href="{{ path('planning_show', {'id': planning.id}) }}">Montrer</a>
                        <a href="{{ path('planning_edit', {'id': planning.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Pas d'enregistrement</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        
        <button class="btn btn-warning"><a href="{{ path('planning_new') }}">Cr√©er</a></button>
