{% extends 'base.html.twig' %}

{% block title %}Collectivite {% endblock %}

{% block body %}
<br>
    <h2 class="align-items-center">Listes des collectivites </h2>
<br><br>
<img src="https://urbainecity.com/wp-content/uploads/2017/02/Lyon_soir.jpg" height="350px" alt="">
    <table class="table table-striped table-info">
        <thead>
            <tr>
                
              
                
                <th>Nom</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Codepostal</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collectivite in collectivites %}
            <tr>
                
               
                
                <td>{{ collectivite.nom }}</td>
                <td>{{ collectivite.adresse }}</td>
                <td>{{ collectivite.telephone }}</td>
                <td>{{ collectivite.codepostal }}</td>
                <td>{{ collectivite.ville }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('collectivite_show', {'id': collectivite.id}) }}">Détails</a>
                   
                    

                </td>
            </tr>
           
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_register') }}">Créer une nouvelle Collectivité</a>
{% endblock %}
