{% extends 'base.html.twig' %}

{% block title %}Connectez vous!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
         <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-2">
            <div class="jumbotron">
                <h3 class="titre">Bonjour {{  app.user.nom}}! ✅ </h3>
             
                <p class="lead"> Votre adresse : {{ app.user.adresse }} <br> {{ app.user.codepostal }} <br> {{ app.user.ville}} </p>

                <hr class="my-4">
                <p> Votre Télephone : {{ app.user.telephone }}</p>
                <p class="lead">
                    <a class="btn btn-primary btn-lg" href=""{{ path('app_logout') }}"" role="button">Se déconnecter</a>
                </p>
            </div>
                        
        </div> 
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Merci de vous enregistrer</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    

    <button class="btn btn-lg btn-primary" type="submit">
        S'enregistrer
    </button>
</form>
{% endblock %}
